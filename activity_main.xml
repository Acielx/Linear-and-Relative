            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUTTON10"
            android:id="@+id/btn10"
            android:layout_gravity="start"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUTTON11"
            android:id="@+id/btn11"
