        android:layout_height="wrap_content"
        android:text="BUTTON2"
        android:id="@+id/btn2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUTTON3"
        android:id="@+id/btn3"
